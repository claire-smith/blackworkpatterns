		//- 3 banner layout
		section.home-slider.position-relative.pt-25.pb-20
			.container
				.row
					.col-lg-9
						.position-relative
							.hero-slider-1.style-3.dot-style-1.dot-style-1-position-1
								.single-hero-slider.single-animation-wrap
									.container
										.slider-1-height-3.slider-animated-1
											.hero-slider-content-2
												h4.animated Blackwork patterns
												h1.animated.fw-900.text-brand Nature &amp; wildlife
												p.animated View all patterns
												a.animated.btn.btn-brush.btn-brush-3(href="/patterns/nature-blackwork-patterns.html")  Shop Now
											.slider-img
												img(src="/assets/bwp/imgs/slider/nature.png", alt="Framed nature blackwork embroidery hoops")
								//-.single-hero-slider.single-animation-wrap
									.container
										.slider-1-height-3.slider-animated-1
											.hero-slider-content-2
